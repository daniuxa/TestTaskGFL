@model Folder
@{
    ViewData["Title"] = "Home Page";
}

<h2>@Model.FolderName</h2>
<ul>
@foreach(var folder in Model.ChildFolderes)
{
    <li>
        <p><b><a href="@Url.Action("FolderTree", "Home", new {folderId = folder.FolderId})">@folder.FolderName</a></b></p>
    </li>
}
</ul>
<h3>Import from json file to @Model.FolderName</h3>
<form id="importForm" method="post" enctype="multipart/form-data" action=@Url.Action("ImportCatalog", "Home", new { parentFolderId = Model.FolderId})>
  <input type="file" name="fileInput" accept=".json">
  <input type="submit" value="Імпортувати">
</form>
